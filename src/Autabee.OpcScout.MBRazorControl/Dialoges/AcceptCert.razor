@using MudBlazor
@using Autabee.Communication.ManagedOpcClient.ManagedNode;
@using Autabee.Communication.ManagedOpcClient;
@using Autabee.OpcScout.RazorControl;
@using Opc.Ua;
@using Autabee.Communication.ManagedOpcClient.Utilities;
@inject ISnackbar Snackbar

@if (MudDialog != null && (record != null || certificate != null))
{
    <MudDialog>
        <TitleContent>
            <MudText Typo="Typo.h6">
                <icon class="mdi mdi-certificate" />
                @MudDialog.Title
            </MudText>
        </TitleContent>
        <DialogContent>
            @if (@record != null)
            {
                <MudTextField Value="@record.Certificate.FriendlyName" Label="Name" ReadOnly=true />
                <MudTextField Value="@record.Certificate.Issuer" Label="Issuer" ReadOnly=true/>
                <MudTextField Value="@record.Certificate.Thumbprint" Label="Thumprint" ReadOnly=true />
            }
            else
            {
                <MudTextField Value="@certificate.Certificate.FriendlyName" Label="Name" ReadOnly=true />
                <MudTextField Value="@certificate.Certificate.Issuer" Label="Issuer" ReadOnly=true />
                <MudTextField Value="@certificate.Certificate.Thumbprint" Label="Thumprint" ReadOnly=true />
            }
            
        </DialogContent>
        <DialogActions>
            <MudButton OnClick="Cancel">Reject</MudButton>
            <MudButton Color="Color.Success" OnClick="Call">Accept</MudButton>
        </DialogActions>
    </MudDialog>
}
@code {
    [CascadingParameter] MudBlazor.IMudDialogInstance? MudDialog { get; set; }
    [Parameter]
    public CertificateValidationEventArgs? record { get; set; }
    [Parameter]
    public CertificateIdentifier? certificate { get; set; }
    protected override void OnInitialized()
    {
        if (record == null && certificate == null)
            throw new Exception("Both record and certificate parameters are null. One must be provided.");
        if (MudDialog == null)
            throw new ArgumentNullException(nameof(MudDialog));
        base.OnInitialized();
    }

    private void Cancel()
    {
        MudDialog?.Cancel();
    }

    private void Call()
    {
        try
        {
            MudDialog?.Close(DialogResult.Ok<object?>(null));
        }
        catch (Exception e)
        {
            Snackbar.Add(e.Message, Severity.Error);
        }
    }
}